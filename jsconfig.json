{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@components/*": ["src/components/*"],
        "@services/*": ["src/services/*"],
        "@hooks/*": ["src/hooks/*"],
        "@pages/*": ["src/pages/*"],
        "@mocks/*": ["src/mocks/*"],
        "@assets/*": ["src/assets/*"],
        "@colors/*": ["src/colors/*"],
        "@redux/*": ["src/redux-toolkit/*"],
        "@root/*": ["src/*"]
      },
      "jsx": "preserve",
      "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules", "dist"]
}
